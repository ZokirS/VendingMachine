@using Shared.DataTransferObjects
@model IEnumerable<BeverageDto>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <!-- Add more columns as needed -->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var beverage in Model)
        {
            <tr>
                <td>@beverage.Name</td>
                <td>@beverage.Price</td>
                <td>@beverage.Count</td>
                <!-- Add more columns as needed -->
                <td>
                    <a asp-action="Edit" asp-route-id="@beverage.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@beverage.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
